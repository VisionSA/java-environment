        /*    selectedUpIcon: null; */
            selectedUpSkin: ClassReference("mx.skins.halo.AccordionHeaderSkin");
            
        /*    upIcon: null; */
            upSkin: ClassReference("mx.skins.halo.AccordionHeaderSkin");
            
            fontFamily: accordionHeader; 
            fontWeight:bold;
            fontSize:11;
            fontSharpness:-200;
            fontThickness:-100;
            fontGridFitType: none;
            
            
        }
