HAccordion
        {
            backgroundColor: #FFFFFF;
            borderStyle: "solid";
            
            paddingBottom: -1;
            paddingLeft: -1;
            paddingRight: -1;
            paddingTop: -1;
            verticalGap: -1;
            horizontalGap: -1;
            textAlign: "right";
        }
        
        VAccordion
        {
            backgroundColor: #FFFFFF;
            borderStyle: "solid";
            
            paddingBottom: -1;
            paddingLeft: -1;
            paddingRight: -1;
            paddingTop: -1;
            verticalGap: -1;
            horizontalGap: -1;
            textAlign: "left";
        }
        
